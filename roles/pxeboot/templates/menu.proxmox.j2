default menu.c32
prompt 0
timeout 300
ONTIMEOUT local
menu title ########## {{ site_message }} ##########

LABEL local
        MENU LABEL Boot local hard drive
        LOCALBOOT 0

label install
        kernel debian-installer/amd64/linux
        MENU LABEL Install Proxmox VE on {{ HOST }}
        LINUX debian-installer/amd64/linux
        INITRD debian-installer/amd64/initrd.gz
        APPEND vga=788 preseed/url=ftp://{{ pxe_server_ip }}/pub/ks/{{ HOST }}.cfg debian-installer/locale=en_US debian-installer/country=US debian-installer/language=en debian-installer/allow_unauthenticated_ssl=true keyboard-configuration/xkb-keymap=us hostname={{ HOST }} domain={{ dhcp_domain }} netcfg/get_ipaddress={{ IP }} netcfg/get_netmask={{ netmask }} netcfg/get_gateway={{ dhcp_gw }} netcfg/get_nameservers={{ dns_ip }} netcfg/choose_interface={{ NIC }} netcfg/disable_autoconfig=true theme=dark  --- quiet
